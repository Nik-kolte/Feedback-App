<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikko.myapplication.Main2Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/tv3"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/t1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="Roll Number"
        android:textSize="20sp"
        android:layout_marginStart="38dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/t2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="38dp" />

    <EditText
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        android:layout_marginEnd="83dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="83dp" />

    <EditText
        android:id="@+id/t2"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="81dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="142dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="82dp"
        android:layout_marginRight="81dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branch"
        android:textSize="20sp"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toLeftOf="@+id/sp2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sp2"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="19dp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textSize="20sp"
        android:layout_marginEnd="19dp"
        app:layout_constraintRight_toLeftOf="@+id/sp1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/sp1"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="19dp" />

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/sp2"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/sp2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/sp2" />

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/t1"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/proceed"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="30dp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:text="Proceed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/sp1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
